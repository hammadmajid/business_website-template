<form class="flex flex-col w-full md:w-9/12 px-3 text-center">
  <div class="form-div">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" required />
  </div>
  <div class="form-div">
    <label for="Email">Email</label>
    <input type="email" name="email" class="form-control" required />
  </div>
  <div class="form-div">
    <label for="subject">Subject</label>
    <input type="text" name="subject" class="form-control" required />
  </div>
  <div class="form-div">
    <label for="message">Message</label>
    <textarea name="message" class="form-control resize-none" required
    ></textarea>
  </div>
  <button
    type="submit"
    class="px-4 py-2 bg-primary hover:bg-primary-hover rounded-full w-32 transition-colors mt-6 font-semibold"
    >Send</button
  >
</form>
